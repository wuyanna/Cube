package com.hackthon.cube;

public class NodeInfo {

	private String name;
	private int type; //0 - people, 1 - shop
	private int id;
	private double weight; // range: 0 ~ 1

	public NodeInfo(String name,int type,int id,double weight){
		this.name=name;
		this.type=type;
		this.id=id;
		this.weight=weight;
	}

	public String name(){
		return this.name;
	}
	public int type(){
		return this.type;
	}

	public int id(){
		return this.id;
	}

	public double weight(){
		return this.weight;
	}
	
	@Override
	public String toString() {
		return "id: " +id + " name: " + name + " type: " + type + " weight: " + weight;
	}
	
}
